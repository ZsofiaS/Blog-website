<%- include("partials/header"); -%>
    <h1>Get in touch!</h1>
    <p> <%= contactContent %> </p>

      <form class="form" action="/contact" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input
          class="form-control"
          id="name"
          type="text"
          name="name"
          placeholder="Your name..."
          required>

        <label for="email">Email</label>
        <input
          class="form-control"
          id="email"
          type="email"
          name="email"
          placeholder="Your email..."
          required>

        <label for="message">Message</label>
        <textarea
          class="form-control"
          id="message"
          type="text"
          name="message"
          placeholder="Your message..."
          rows="3"
          required></textarea>

        </div>
          <button class="btn btn-primary" type="submit" name="button">Submit</button>
      </form>


    <div class="contact-container">
    <a
      id="profile-link"
      class="profile-link"
      target="_blank"
      href="https://github.com/ZsofiaS">
      <i class="fa fa-github fa-2x contact"></i>
    </a>

    <a
      id="profile-link2"
      class="profile-link"
      target="_blank"
      href="https://www.linkedin.com/in/zsofia-szonyi-34b8b6b6/">
      <i class="fa fa-linkedin fa-2x contact"></i>
    </a>

    <a
      id="profile-link2"
      class="profile-link"
      target="_blank"
      href="https://www.facebook.com/profile.php?id=1165892913">
      <i class="fa fa-facebook-square fa-2x contact"></i>
    </a>

    <a
      id="profile-link2"
      class="profile-link"
      target="_blank"
      href="https://codepen.io/zsofia-sz">
      <i class="fa fa-codepen fa-2x contact"></i>
    </a>

      </div>
<%- include("partials/footer"); -%>
